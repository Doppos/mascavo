<div class="row-fluid">
  <div class="span8">
    <div class="well well-info">
      <h4 class="well-title"><%= t(:'title.user_info') %></h4>
      <h3><%= @user.email %></h3>
    </div>
  </div>

  <div class="span4">
    <div class="well well-info">
      <h4 class="well-title"><%= t(:'title.sign_in_info') %></h4>
      <ul class="well-list">
        <li>
          <h5><%= t(:'misc.current_sign_in') %></h5>
          <h4>[<%= @user.current_sign_in_ip %>] <%= l(@user.current_sign_in_at) %></h4>
        </li>
        <li>
          <h5><%= t(:'misc.last_sign_in') %></h5>
          <h4>[<%= @user.last_sign_in_ip %>] <%= l(@user.last_sign_in_at) %></h4>
        </li>
        <li>
          <h5><%= t(:'misc.sign_in_count') %></h5>
          <h4><%= @user.sign_in_count %></h4>
        </li>
      </ul>
    </div>

    <div class="well well-info">
      <h4 class="well-title"><%= t(:'title.other_info') %></h4>
      <ul class="well-list">
        <li>
          <h5><%= t(:'misc.created_at') %></h5>
          <h4><%= l(@user.created_at) %></h4>
        </li>
        <li>
          <h5><%= t(:'misc.updated_at') %><h5>
          <h4><%= l(@user.updated_at) %></h4>
        </li>
      </ul>
    </div>
  </div>
</div>