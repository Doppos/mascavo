<%= simple_form_for @source do |f| %>
  <div class="alert alert-info alert-box">
    <%= f.button :submit, :value => t(:'button.save_source'), :class => "btn-primary" %>
  </div>

  <div class="row-fluid">
    <div class="span8 form-horizontal">
      <div class="well">
        <h4 class="well-title"><%= t(:'fieldset.source_info') %></h4>
        <%= f.input :value, :label => t(:'field.source') %>
        <%= f.input :label, :label => t(:'field.type'), :collection => listable(:sources, :label), :include_blank => t(:'label.select') %>
        <%= f.input :description, :label => t(:'field.description'), :input_html => { :rows => 7, :class => "input-block-level" } %>
      </div>
    </div>

    <div class="span4">
      <div class="well">
        <h4 class="well-title"><%= t(:'fieldset.other_information') %></h4>
        <%= f.input :active, :inline_label => t(:'field.active'), :label => false %>
      </div>
    </div>
  </div>
<% end %>
