<h2><%= @deal.value %> <%= labeled @deal.label %></h2>

<ul class="nav nav-tabs">
  <%= nav_link_to t(:'button.details'), deal_path, :match => :fullpath %>
  <%= nav_link_to t(:'button.activities'), deal_path(:tab => :activities) %>

  <div class="btn-group pull-right">
    <%= link_to iconed(t(:'button.edit'), :pencil, :white), edit_deal_path, :class => "btn btn-primary" %>
    <%= link_to iconed(t(:'button.list'), :th_list), deals_path, :class => "btn" %>
    <%= link_to iconed(t(:'button.new_deal'), :plus), new_deal_path, :class => "btn" %>
  </div>
</ul>

<%= render params[:tab] %>
