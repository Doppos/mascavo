<div class="signup">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" } do |f| %>
    <%= f.error_notification %>
    <h2>Sign up</h2>
    <hr>
    <div class="content clearfix">
      <%= f.input :email, :placeholder => "Email", :required => true, :autofocus => true %>
      <%= f.input :password, :placeholder => "Password", :required => true %>
      <%= f.input :password_confirmation, :placeholder => "Password confirmation", :required => true %>
    </div>
    <div class="well clearfix">
      <%= f.button :submit, "Sign up", :class => "btn-success pull-right" %>
    </div>
  <% end %>
</div>