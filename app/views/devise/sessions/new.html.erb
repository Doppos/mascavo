<div class="sign-box">
  <h2>Sign in</h2>

  <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' } do |f| %>
    <%= f.input :email, :placeholder => "Email", :label => false, :autofocus => true %>
    <%= f.input :password, :placeholder => "Password", :label => false %>
    <%= f.input :remember_me, :as => :boolean, :inline_label => true, :label => false if devise_mapping.rememberable? %>
    <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>