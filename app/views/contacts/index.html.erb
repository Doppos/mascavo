<h3>Contacts</h3>

<table class="table table-condensed">
    <thead>
      <tr>
          <th>Name</th>
          <th>Status</th>
          <th></th>
      </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
          <td><%= link_to contact.name, contact %></td>
          <td><%= contact.status %></td>
          <td><%= link_to "Delete contact", contact_path(contact), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </tbody>
</table>