<div class="row-fluid">
  <div class="span8">
    <div class="well well-info">
      <h4 class="well-title"><%= t(:'title.activity_description') %></h4>
      <h4><%= @activity.description %></h4>
    </div>
  </div>

  <div class="span4">
    <div class="well well-info">
      <h4 class="well-title"><%= t(:'title.other_info') %></h4>
      <ul class="well-list">
        <li>
          <h5><%= t(:'misc.created_at') %> <%= l(@activity.created_at) %></h5>
          <div class="tags">
            <%= iconed @activity.created_by_user.name, :user %>
          </div>
        </li>
        <li>
          <h5><%= t(:'misc.updated_at') %> <%= l(@activity.updated_at) %></h5>
          <div class="tags">
            <%= iconed @activity.updated_by_user.name, :user %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>